<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout

            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_background_item"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"

            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
              <ImageView
                    android:id="@+id/item_avata_san"
                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_tensan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sân"

                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                />
                <TextView
                    android:id="@+id/item_vitri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                    android:text="vị trí"/>
                <TextView
                    android:id="@+id/item_gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                    android:text="giá"/>

                <TextView
                    android:id="@+id/item_tenloaisan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                    android:text=" tên loai san"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_pt_imgtd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_optionmenu"
                />
        </LinearLayout>


</LinearLayout>