

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="200dp"
        android:gravity="center"
        android:background="@drawable/shape_bacground_taphome"
        tools:context=".Fragment.thongke.ThongKeFragment">
    <LinearLayout
        android:id="@+id/l1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:text="THỐNG KÊ "
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/img_avata"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1">
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ ngày"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:id="@+id/btntungay"/>
            <EditText
                android:id="@+id/edt_ngayBatDau"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:hint="ngày bắt đầu"
                android:background="@drawable/mautrang"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/l2"
            android:layout_marginBottom="20dp"
            android:weightSum="10">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đến ngày"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:id="@+id/btndenngay"/>
            <EditText
                android:id="@+id/ngayketthuc"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:hint="ngày kết thúc"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:background="@drawable/mautrang"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l4"
            android:layout_below="@+id/l3"
            >
            <Button
                android:id="@+id/btnDoanhThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/mau_nen"
                android:text="Doanh Thu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnTongDoanhThu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/mau_nen"
                android:text="Tổng doanh thu"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l4"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/robito_indam"
                android:gravity="center"
                android:text="Doanh Thu: " />

            <TextView
                android:id="@+id/tv_doanhthu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:fontFamily="@font/robito_indam"
                android:gravity="center|right"
                android:text=""
                android:textColor="@color/mau_nen"
                android:textSize="25dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/robito_indam"
                android:gravity="center|left"
                android:text="VNĐ"
                android:textColor="@color/mau_nen"
                android:textSize="25dp" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>

